<%- include('layouts/head'); -%>

<%- include('layouts/autocheck'); -%>

<% var orgs = orgs; %>

<div class="content-wrapper">
  <div class="content-heading">
      <div class="row">
          <div class="col-lg-12">
              <h1>Organizations</h1>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-3"></div>
      </div>
      <h4>List your Orgs.</h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default" style="border:1px solid #b3b3b3;">
          <div class="panel-heading">
            <div class="row">
              <div class="col-lg-4">
                  <h3>Orgs</h3>
              </div>
            </div>
          </div>
          <div class="panel-body fixed-panel">
            <% for(var i=0; i < orgs.length; i++) { %>
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-default" style="border:1px solid white;">
                    <div class="panel-heading">
                      <div class="row">
                        <div class="col-lg-1">
                          <img src="<%= orgs[i].avatar_url %>" class="img-responsive"  style=" height:35px;">
                        </div>
                        <div class="col-lg-4">
                            <a role="button" onclick="AssignmentsRender('<%= orgs[i].login %>')"><h4><%= orgs[i].login %></h4></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
    </div>

    </div>
  </div>
</div>
          
<footer><span>&copy; 2018 AutoCheck</span></footer>

<%- include('layouts/footer'); -%>
